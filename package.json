{
  "name": "psyvis_lab",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:web\"",
    "dev:web": "vite",
    "dev:server": "tsx watch server/src/index.ts",
    "build": "npm run build:web && npm run build:server",
    "build:web": "tsc -b && vite build",
    "build:server": "tsup server/src/index.ts --format esm --target es2023 --outDir server/dist --sourcemap",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "vitest run",
    "test:server": "vitest run server/ shared/",
    "test:web": "vitest run src/",
    "rag:ingest": "tsx server/scripts/rag_ingest.ts"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "archiver": "^7.0.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jpeg-js": "^0.4.4",
    "lucide-react": "^0.560.0",
    "pngjs": "^7.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/archiver": "^7.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.18",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}
